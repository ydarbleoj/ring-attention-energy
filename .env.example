# Environment Configuration Example
# Copy this file to .env and fill in your API keys

# EIA (Energy Information Administration) API
# Get your free API key at: https://www.eia.gov/opendata/register.php
# Rate limit: 5,000 requests/hour
EIA_API_KEY=your_eia_api_key_here

# CAISO (California ISO) API
# No API key required - public data
# Rate limit: Be respectful, ~1 request/second recommended
CAISO_BASE_URL=http://oasis.caiso.com/oasisapi/SingleZip

# ENTSO-E (European Grid) API (optional)
# Get your API key at: https://web-api.tp.entsoe.eu/
# Rate limit: 400 requests/minute
ENTSO_E_API_KEY=your_entso_e_api_key_here

# Data storage configuration
DATA_CACHE_DIR=data/cache
MAX_CACHE_SIZE_GB=10

# API Rate limiting
EIA_RATE_LIMIT_DELAY=0.72  # seconds between requests
CAISO_RATE_LIMIT_DELAY=1.0
ENTSO_E_RATE_LIMIT_DELAY=0.15

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/energy_pipeline.log

# Development settings
DEBUG=False
TESTING=False
